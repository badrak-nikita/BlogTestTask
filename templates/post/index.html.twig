{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-container">
        <h1>Список постів</h1>

        <div class="top-controls">
            <a class="create-btn" href="{{ path('post_create') }}">Створити новий пост</a>

            <form method="get" class="filter-form">
                <label>Фільтр за тегом:</label>
                <select name="tag" onchange="this.form.submit()">
                    <option value="">Всі</option>
                    {% for tag in tags %}
                        <option value="{{ tag.id }}" {% if currentTag == tag.id %}selected{% endif %}>{{ tag.tagName }}</option>
                    {% endfor %}
                </select>
            </form>
        </div>

        <div class="table-wrapper">
            <table class="tag-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Заголовок</th>
                        <th>Теги</th>
                        <th>Дата створення</th>
                        <th>Дії</th>
                    </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td><a class="table-btn view" href="{{ path('post_show', {id: post.id}) }}">{{ post.title }}</a></td>
                        <td>
                            {% for tag in post.tags %}
                                {{ tag.tagName }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </td>
                        <td>{{ post.createdAt|date('d.m.Y H:i') }}</td>
                        <td>
                            <a class="table-btn edit" href="{{ path('post_edit', {id: post.id}) }}">Редагувати</a>
                            <form method="post" action="{{ path('post_delete', {id: post.id}) }}" style="display:inline">
                                <button class="table-btn delete" type="submit" onclick="return confirm('Видалити пост?')">Видалити</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Постів немає</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="pagination">
            {{ knp_pagination_render(posts) }}
        </div>
    </div>
{% endblock %}
